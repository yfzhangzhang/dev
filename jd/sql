alter table t_task
    add sub_inventory varchar(64) null comment '二级关联id' after inventory;
alter table t_task
    add sub_tripartite_name varchar(500) null comment '二级聚合名称' after tripartite_name;

create index idx_tripartite on t_task (inventory, sub_inventory)  comment '三方关联关系';

CREATE TABLE `t_task_jme_okr_related` (
  `id` bigint(20) NOT NULL AUTO_INCREMENT COMMENT '主键',
  `task_id` varchar(64) NOT NULL COMMENT '任务id',
  `goal_id` varchar(64) DEFAULT NULL COMMENT '目标id',
  `kr_id` varchar(64) DEFAULT NULL COMMENT 'krid',
  `status` tinyint(4) NOT NULL DEFAULT '1' COMMENT '关联状态',
  `gmt_create` bigint(20) NOT NULL COMMENT '创建时间',
  `gmt_modified` bigint(20) NOT NULL COMMENT '修改时间',
  `type` tinyint(4) DEFAULT '1' COMMENT '关联类型',
  PRIMARY KEY (`id`) USING BTREE,
  KEY `idx_task` (`task_id`,`goal_id`, `kr_id`) USING BTREE,
  KEY `idx_goal` (`goal_id`, `kr_id`) USING BTREE,
  KEY `idx_kr` (`kr_id`) USING BTREE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4 COMMENT='京ME目标与任务关联表'

